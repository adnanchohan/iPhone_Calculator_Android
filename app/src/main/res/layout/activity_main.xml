<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_area"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="sans-serif-light"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:textSize="120sp"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_line1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/ac_btn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight=".25"
                android:background="@drawable/round_btn_lightgrey"
                android:fontFamily="sans-serif-medium"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="40sp" />
        <Button
            android:id="@+id/plus_minus_btn"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:textColor="@color/black"
            android:layout_weight=".25"
            android:text="+/-"
            android:textSize="40sp"
            android:background="@drawable/round_btn_lightgrey"/>
        <Button
            android:id="@+id/perctage_btn"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:textColor="@color/black"
            android:layout_weight=".25"
            android:text="%"
            android:textSize="40sp"
            android:background="@drawable/round_btn_lightgrey"/>
        <Button
            android:id="@+id/divide_btn"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_height="80dp"
            android:layout_weight=".25"
            android:text="÷"
            android:textSize="40sp"
            android:background="@drawable/round_btn_yellow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_line2"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/seven_btn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight=".25"
                android:background="@drawable/round_btn"
                android:fontFamily="sans-serif-medium"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="40sp" />
            <Button
                android:id="@+id/eight_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="8"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/nine_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/multiply_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:text="×"
                android:textStyle="bold"
                android:textSize="40sp"
                android:background="@drawable/round_btn_yellow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_line3"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <Button
                android:id="@+id/four_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:text="4"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/five_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="5"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/six_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="6"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/minus_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:text="—"
                android:textScaleX=".8"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:background="@drawable/round_btn_yellow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_line4"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <Button
                android:id="@+id/one_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/two_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="2"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/three_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="3"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight=".25"
                android:background="@drawable/round_btn_yellow"
                android:fontFamily="sans-serif"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_line5"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <Button
                android:id="@+id/zero_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".5"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:paddingLeft="30dp"
                android:textAlignment="textStart"
                android:background="@drawable/round_btn"/>

            <Button
                android:id="@+id/decimal_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:text="."
                android:textColor="@color/white"
                android:textSize="40sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/equals_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:text="="
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@drawable/round_btn_yellow"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>