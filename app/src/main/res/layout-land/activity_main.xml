<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.calculator.View.MainActivity"
    android:background="@color/black"
    android:weightSum="1.0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/CalculatorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="sans-serif-light"
            android:text="0"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:textSize="50dp"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:weightSum="100"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/scientific_btn_area"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/sbtn_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.2">
                <Button
                    android:id="@+id/bracket_open_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:text="("
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/bracket_close_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:text=")"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/mc_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="mc"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/mplus_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:text="m+"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/m_minus_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="m-"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/mr_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:layout_height="50dp"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="mr"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sbtn_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.2">
                <Button
                    android:id="@+id/second_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="2nd"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/x_pwr_two_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:text="x^2"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/x_pwr_three_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_weight=".2"
                    android:text="x^3"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/x_pwr_y_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_weight=".2"
                    android:text="x^y"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/e_pwr_x_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="e^x"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/ten_pwr_x_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:layout_height="50dp"
                    android:textAllCaps="false"
                    android:layout_weight=".2"
                    android:text="10^x"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sbtn_line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.2">
                <Button
                    android:id="@+id/one_div_x_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="1/x"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/two_unroot_x_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="@string/two_under_rootx"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/three_unroot_x_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_weight=".2"
                    android:text="@string/three_under_rootx"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/y_unroot_x_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="@string/y_under_rootx"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/ln_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_weight=".2"
                    android:text="ln"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/log_ten_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:layout_height="50dp"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="log10"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sbtn_line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.2">
                <Button
                    android:id="@+id/factorial_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="x!"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/sin_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_weight=".2"
                    android:text="sin"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/cos_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:text="cos"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/tan_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:text="tan"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/exponential_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:text="e"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/double_e_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:layout_height="50dp"
                    android:layout_weight=".2"
                    android:text="EE"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sbtn_line5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.2">
                <Button
                    android:id="@+id/rad_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:text="Rad"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/sinh_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="sinh"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/cosh_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="cosh"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/tanh_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="tanh"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/pi_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="@string/pi"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
                <Button
                    android:id="@+id/rand_btn"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:layout_height="50dp"
                    android:layout_weight=".2"
                    android:textAllCaps="false"
                    android:text="Rand"
                    android:textSize="20sp"
                    android:background="@drawable/round_btn_darkgrey"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/simple_btn_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
        <Button
            android:id="@+id/ac_btn"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_weight=".25"
            android:text="AC"
            android:textSize="20sp"
            android:background="@drawable/round_btn_lightgrey"/>
        <ImageView
            android:id="@+id/plus_minus_btn"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".25"
            android:padding="10dp"
            android:src="@drawable/plus_minus_sign"
            android:background="@drawable/round_btn_lightgrey"/>
        <ImageView
            android:id="@+id/perctage_btn"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".25"
            android:padding="10dp"
            android:src="@drawable/percentage"
            android:background="@drawable/round_btn_lightgrey"/>
        <ImageView
            android:id="@+id/divide_btn"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".25"
            android:padding="16dp"
            app:tint="@color/white"
            android:src="@drawable/divide_sign"
            android:background="@drawable/round_btn_yellow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <Button
                android:id="@+id/seven_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="7"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/eight_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="8"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/nine_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <ImageView
                android:id="@+id/multiply_btn"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:padding="14dp"
                app:tint="@color/white"
                android:src="@drawable/multiply_sign"
                android:background="@drawable/round_btn_yellow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <Button
                android:id="@+id/four_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:text="4"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/five_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="5"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/six_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="6"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <ImageView
                android:id="@+id/minus_btn"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:padding="15dp"
                app:tint="@color/white"
                android:src="@drawable/minus_sign_land"
                android:background="@drawable/round_btn_yellow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <Button
                android:id="@+id/one_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/two_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="2"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <Button
                android:id="@+id/three_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:textColor="@color/white"
                android:text="3"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <ImageView
                android:id="@+id/plus_btn"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:padding="16dp"
                app:tint="@color/white"
                android:src="@drawable/plus_sign"
                android:background="@drawable/round_btn_yellow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <Button
                android:id="@+id/zero_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".5"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:background="@drawable/round_btn"/>

            <Button
                android:id="@+id/decimal_btn"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:text="."
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/round_btn"/>
            <ImageView
                android:id="@+id/equals_btn"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".25"
                android:padding="16dp"
                app:tint="@color/white"
                android:src="@drawable/equals_sign"
                android:background="@drawable/round_btn_yellow"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>